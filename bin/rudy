# -------------------------------------------  UGLY STUFFS  --------
# ------------------------------------------------------------------
debug :on
default :status
capture :stderr       
before do
  @start = Time.now
end
after do
  @elapsed = Time.now - @start
  puts $/, "Elapsed: %.2f seconds" % @elapsed.to_f if @elapsed > 0.1
end

